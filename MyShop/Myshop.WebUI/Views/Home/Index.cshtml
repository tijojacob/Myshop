@model MyShop.Core.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="col-md-2">
    <h4>Filter By Category</h4>
    <div class="list-group">
        @Html.ActionLink("All","Index",null,new { @class = Request["Category"] ==null ? "list-group-item active" : "list-group-item" })
        @foreach(var cat in Model.ProductCategories)
            {
                @Html.ActionLink(cat.Catagery, "Index",new { Category = cat.Catagery },new { @class = Request["Category"] == cat.Catagery ? "list-group-item active" : "list-group-item" })
            }
    </div>
</div>

@foreach(var item in Model.Product)
{
<div class="col-md-4" style="height:450px;padding:10px;margin:10px;border:solid thin dashed">
    <div class="col-md-12">
        <img class="img-responsive" style="height:250px" src="~/Content/ProductImages/@item.Image" />
    </div>
    <div class="col-md-12">
        <strong> @Html.ActionLink(item.Name, "Details", new { id = item.Id }) </strong>
    </div>
    <div class="col-md-12">
        <p>@item.Description</p>
    </div>
    <div class="col-md-12">
        <p>@item.Price</p>
    </div>
    <div class="col-md-12">
        <a href="@Url.Action("AddToBasket","Basket",new { Id=item.Id })" class="btn btn-default">Add to Basket</a>
    </div>
</div>
}

<div class="col-md-12 clearfix"></div>
